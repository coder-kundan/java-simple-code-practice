
public class Find_Alphabet {

	public static void main(String[] args) {
		char arr[]= {'a','b','c','d','e'};
		char item='c';
		System.out.println();
	int k=find_Index(arr,item);

	}
	public static int find_Index(char arr[],char item)
	{
		
		int start=0;
	    int	end=arr.length-1;
	    while(start <= end)
	    {
	    	int mid= (start+end)/2;
	    	
	    	if(item==arr[mid])
	    	{
	    	return mid;	
	    	}
	    	else if(item > arr[mid])
	    	{
	    		start=mid+1;
	    	}
	    	else if(item < arr[mid]) {
	    		end=mid-1;
	    	}
	    	
	    }
		return -1;
	}

}
